<%- model_class = Food -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th>Total Calories <small>&nbsp;(kcal)</small></th>
      <th><%= model_class.human_attribute_name(:carbs) %> <small>&nbsp;(g)</small></th>
      <th><%= model_class.human_attribute_name(:fat) %> <small>&nbsp;(g)</small></th>
      <th><%= model_class.human_attribute_name(:protein) %><small>&nbsp;(g)</small></th>
      <th><%= model_class.human_attribute_name(:sodium) %><small>&nbsp;(mg)</small></th>
      <th><%= model_class.human_attribute_name(:sugar) %><small>&nbsp;(g)</small></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @foods.each do |food| %>
      <tr>
        <td><%= food.name %></td>
        <td><strong><%= food.calories %></strong></td>
        <td><%= food.carbs %></td>
        <td><%= food.fat %></td>
        <td><%= food.protein %></td>
        <td><%= food.sodium %></td>
        <td><%= food.sugar %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      food_path(food), :class => 'btn btn-primary btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_food_path(food), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      food_path(food),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_food_path,
            :class => 'btn btn-primary' %>
