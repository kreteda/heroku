<%- model_class = Food -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @food.name %></dd>
  <dt><strong>Total calories:</strong></dt>
  <dd><strong><%= @food.calories %> kcal</strong></dd>
  <dt><strong><%= model_class.human_attribute_name(:carbs) %>:</strong></dt>
  <dd><%= @food.carbs %> g</dd>
  <dt><strong><%= model_class.human_attribute_name(:fat) %>:</strong></dt>
  <dd><%= @food.fat %> g</dd>
  <dt><strong><%= model_class.human_attribute_name(:protein) %>:</strong></dt>
  <dd><%= @food.protein %> g</dd>
  <dt><strong><%= model_class.human_attribute_name(:sodium) %>:</strong></dt>
  <dd><%= @food.sodium %> mg</dd>
  <dt><strong><%= model_class.human_attribute_name(:sugar) %>:</strong></dt>
  <dd><%= @food.sugar %> g</dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              foods_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_food_path(@food), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              food_path(@food),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
